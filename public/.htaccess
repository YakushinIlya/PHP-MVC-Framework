<IfModule mod_rewrite.c>
    RewriteEngine On

    # Базовый путь
    RewriteBase /

    # Если файл или директория существуют — отдаём напрямую
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # Все остальные запросы → index.php
    RewriteRule ^ index.php [L]
</IfModule>
